{
  "tag": "app",
  "children": [
    {
      "tag": "layout",
      "children": [
        {
          "tag": "header",
          "children": [
            {
              "tag": "label",
              "style": {
                "fontSize": "20px",
                "fontWeight": "bold",
                "color": "#fff"
              },
              "children": "collect"
            }
          ],
          "style": {
            "color": "#fff",
            "height": 44,
            "paddingInline": 48,
            "lineHeight": "44px",
            "backgroundColor": "#4096ff",
            "padding": "0 20px"
          }
        },
        {
          "tag": "layout",
          "children": [
            {
              "tag": "sider",
              "width": "240px",
              "collapsible": true,
              "collapsedWidth": "40",
              "children": [
                {
                  "tag": "form",
                  "name": "framework-form",
                  "children": [
                    {
                      "tag": "form-item",
                      "name": "search",
                      "style": {
                        "textAlign": "center",
                        "margin": "4px 0px 4px 0px"
                      },
                      "children": [
                        {
                          "tag": "input",
                          "style": {
                            "width": "96%"
                          },
                          "placeholder": "搜索菜单"
                        }
                      ]
                    },
                    {
                      "tag": "form-item",
                      "name": "menu",
                      "children": [
                        {
                          "tag": "menu",
                          "mode": "inline",

                          "changeRouter": true,
                          "rule": {
                            "key_field": "menu_code",
                            "label_field": "menu_name",
                            "icon_field": "icon",
                            "to_field": "url"
                          },
                          "defaultOpenKeys": ["home","sub1"],
                          "items": "${menu_list.filter((item)=>item.in_menu!==false)}"
                        }
                      ]
                    }
                  ]
                }
              ],
              "style": {
                "backgroundColor": "#fafafa"
              }
            },

            {
              "tag": "content",
              "style": {
                "display": "flex",
                "flexDirection": "column",
                "overflow": "hidden"
              },

              "children": [
                {
                  "tag": "router-tab"
                },
                {
                  "tag": "outlet",
                  "style": {
                    "flex": 1,
                    "padding": "8px",
                    "overflow": "hidden"
                  }
                }
              ]
            }
          ]
        },
        {
          "tag": "footer",
          "children": [
            {
              "tag": "label",
              "children": "footer"
            }
          ],
          "style": {
            "padding": "4px 10px",
            "display": "flex",
            "alignItems": "center"
          }
        }
      ]
    }
  ]
}